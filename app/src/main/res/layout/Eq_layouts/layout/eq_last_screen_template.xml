<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/equipment_menus_color"
    tools:context=".Equipment.Eq_SG_Pump"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>

    <ImageView
        android:contentDescription="Gun Picture"
        android:id="@+id/pic_above_table"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sg_pump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/stat_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/table_divider">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_divider_thickness"
            android:background="@color/table_divider"></View>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:gravity="center"
                android:text="@string/table_header"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />



        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_divider_thickness"></View>


        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_damage"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />



        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_head_shot"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />



        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_fire_rate"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />



        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_reload_time"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_Dps"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_divider_thickness"
                android:layout_marginEnd="@dimen/table_divider_thickness"
                android:background="@color/table_first_column_background"
                android:text="@string/table_Mag_size"
                android:textColor="@color/table_text_color"
                android:textSize="@dimen/table_text_size" />


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/Gun_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/table_text_color"
        android:textSize="@dimen/table_text_size"
        android:text="Gun"
        app:layout_constraintBottom_toTopOf="@+id/stat_table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:contentDescription="Plus Button Picture"
        android:id="@+id/plusbutton"
        android:layout_width="66dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/plus_button"
        app:layout_constraintBottom_toTopOf="@+id/Gun_name"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/view" />


</android.support.constraint.ConstraintLayout>