<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/equipment_element_img"
        android:contentDescription="Gun Picture"
        android:layout_width="@dimen/equipment_screen_images_width_and_height"
        android:layout_height="@dimen/equipment_screen_images_width_and_height"
        android:src="@drawable/ar_scar"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/equipment_element_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/equipment_screen_txt_size"
        android:text="@string/Assault_Rifles_button_name"
        android:layout_gravity="center"
        />

</LinearLayout>